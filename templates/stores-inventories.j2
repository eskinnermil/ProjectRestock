{% extends "main.j2" %}


{% block title %}
Stores Inventories
{% endblock %}


{% block heading %}
Stores Inventories
{% endblock %}


{% block content %}
<table>
<thead>
{% if stores_inventories %}
<tr>
    {% for key in stores_inventories[0].keys() %}
        <th>{{ key }}</th>
    {% endfor %}
        {# <th>Delete</th> #}
{% else %}
    <p>There are currently no stores inventories listed.</p>
{% endif %}
</tr>

<tbody>
    {% for attribute in stores_inventories %}
<tr>
    {% for key in attribute.keys() %}
        <td>{{attribute[key]}}</td>
    {% endfor %}
        {# <td><a href="{{url_for('view_stores_inventories.stores_inventories')}}" />Delete</td> #}
</tr>
{% endfor %}
</table>

    <br />

    <form method="POST">
    <fieldset><legend> Add a Store Inventory</legend>

        <label>item type
            <select name="id_item_type">
            <option value="">Select an item type</option>
            {% for type in items_types_dropdown %}
            <option value="{{ type.id_item_type }}">{{ type.name }}</option>
            {% endfor %}
            </select>
        </label>
        
        <br />

        <label>store
            <select name="id_store">
            <option value="">Select a store</option>
            {% for store in stores_dropdown %}
            <option value="{{ store.id_store }}">{{ store.name }}</option>
            {% endfor %}
            </select>
        </label>

    </fieldset>
    <button type="submit" name="Add_Stores_Inventories" value="Add a Store Inventory">Add</button>
    </form>
{% endblock %}