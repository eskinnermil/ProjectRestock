{% extends "main.j2" %}


{% block title %}
Households Inventories - Edit
{% endblock %}


{% block heading %}
Households Inventories - Edit Selection
{% endblock %}


{% block content %}
    <form action="{{url_for('households_inventories')}}" method="PUT">
    <fieldset><legend> Edit a Household Inventory</legend>
    <label>household
        <input type ="number" name="id_household" size="12" maxlength="45" required="required">
    </label>
    <label>item
        <input type="number" name="id_item" size="12" maxlength="45" required="required">
    </label>
    <br />
    <label>amount left
        <input type="text" name="amount_left" size="12" maxlength="45" required="required">
    </label>
    <br />    
    <label>restock status
        <input type="text" name="restock_status" size="12" maxlength="45" required="required">
    </label>
    <br />
    <button type="submit">Submit</button>
    <input type="button" name="Cancel" value="Cancel" onClick="window.location.href='{{url_for('households_inventories')}}';" />   
    </fieldset>
    </form>    
{% endblock %}