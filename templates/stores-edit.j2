{% extends "main.j2" %}


{% block title %}
Stores - Edit
{% endblock %}


{% block heading %}
Stores - Edit Selection
{% endblock %}


{% block content %}
    <form action="{{url_for('stores')}}" method="PUT">
    <fieldset><legend> Edit a Store</legend>
    <label>name
        <input type="text" name="name" size="12" maxlength="45" required="required">
    </label>
    <br />
    <label>address
        <input type="text" name="address" size="12" maxlength="145" required="required">
    </label>
    <br />
    <label>hours open
        <input type="text" name="hours_open" size="12" maxlength="45" required="required">
    </label>
    <br />
    <button type="submit">Submit</button>
    <input type="button" name="Cancel" value="Cancel" onClick="window.location.href='{{url_for('stores')}}';" />   
    </fieldset>
    </form>
{% endblock %}